{
  "name": "luca",
  "version": "0.0.1",
  "private": true,
  "description": "Visual node-based graph editor for React Native with Drawflow integration",
  "author": "Giovanni",
  "license": "MIT",
  "scripts": {
    "emulator": "/home/giovanni/Android/Sdk/emulator/emulator -avd Pixel_API_34_v2 -read-only &",
    "emulator:stop": "adb -s emulator-5554 emu kill || pkill -f 'emulator.*Pixel_API_34_v2'",
    "android": "bash ./scripts/run-android.sh",
    "android:clean": "cd android && ./gradlew clean && cd ..",
    "android:install": "npm run android:clean && npm run android",
    "android:release": "cd android && ./gradlew assembleRelease && cd ..",
    "build": "./scripts/build-debug-apk.sh",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "start": "react-native start",
    "start:reset": "react-native start --reset-cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:signals": "jest signalSystem",
    "demo:signals": "npx ts-node src/demo/runSignalDemo.ts",
    "generate:icons": "node ./scripts/generate-icons.js assets/logo_luca.png",
    "validate": "npm run typecheck && npm run lint && npm run test"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-vector-icons/fontawesome6": "^12.3.0",
    "@react-native-vector-icons/material-icons": "^12.4.0",
    "@react-native/new-app-screen": "0.82.1",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/native-stack": "^7.6.2",
    "lucide-react": "^0.552.0",
    "react": "19.1.1",
    "react-native": "^0.82.1",
    "react-native-gesture-handler": "^2.29.0",
    "react-native-reanimated": "^4.1.3",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "^4.18.0",
    "react-native-skia": "^0.0.1",
    "react-native-svg": "^15.14.0",
    "react-native-torch": "^1.2.0",
    "react-native-vector-icons": "^10.3.0",
    "react-native-webview": "^13.12.5",
    "react-native-worklets": "^0.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native/babel-preset": "0.82.1",
    "@react-native/eslint-config": "0.82.1",
    "@react-native/metro-config": "0.82.1",
    "@react-native/typescript-config": "0.82.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.1",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^19.1.0",
    "eslint": "^8.19.0",
    "jest": "^29.7.0",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.8.3",
    "sharp": "^0.32.4"
  },
  "engines": {
    "node": ">=20"
  }
}
